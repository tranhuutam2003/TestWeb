@model TestWeb.Models.Product

@{
    ViewData["Title"] = "Add Product to Cart";
}

<h2>Add Product to Cart</h2>

<form method="post" asp-action="AddToCart">
    <div class="form-group">
        <label>Product Name</label>
        <input type="text" class="form-control" value="@Model.Name" readonly />
    </div>
    <div class="form-group">
        <label>Price</label>
        <input type="text" class="form-control" value="@Model.Price" readonly />
    </div>
    <div class="form-group">
        <label>Quantity</label>
        <input type="number" name="quantity" class="form-control" value="1" />
    </div>
    <input type="hidden" name="ProductId" value="@Model.Id" />
    <button type="submit" class="btn btn-primary">Add to Cart</button>
</form>
